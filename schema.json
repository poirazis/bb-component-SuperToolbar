          {
            "label": "Medium",
            "value": "M"
          },
          {
            "label": "Large",
            "value": "L"
          },
          {
            "label": "Extra Large",
            "value": "XL"
          }
        ],
        "defaultValue": "M"
      },
      {
        "type": "boolean",
        "label": "Icon Only",
        "key": "iconOnly"
      },
      {
        "type": "boolean",
        "label": "Quiet",
        "key": "quiet"
      },
      {
        "type": "boolean",
        "label": "Compact",
        "key": "compact"
