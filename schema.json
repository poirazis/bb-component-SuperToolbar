          { "label" : "Normal", "value": "normal", "barIcon" : "Button" },
          { "label" : "Action", "value": "action" , "barIcon" : "App" }
        ]
      },
      {
        "section": true,
        "name": "Buttons",
        "settings": [
          {
            "type": "buttonConfiguration",
